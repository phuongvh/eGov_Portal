<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>EDirectory</portlet-name>
		<display-name>EDirectory</display-name>
		<portlet-class>
			com.vportal.portlet.edirectory.action.ManageEDirectory
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/manage_edirectory/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>EDirectory</title>
			<short-title>View Action</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>EDirectoryMenu</portlet-name>
		<display-name>EDirectoryMenu</display-name>
		<portlet-class>
			com.vportal.portlet.edirectorymenu.action.MenuEDirectory
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/menu_edirectory/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/menu_edirectory/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>EDirectoryMenu</title>
			<short-title>EDirectoryMenu</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>EDirectoryView</portlet-name>
		<display-name>EDirectoryView</display-name>
		<portlet-class>
			com.vportal.portlet.edirectoryview.action.ContentEDirectory
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/content_edirectory/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-template</name>
			<value>/html/content_edirectory/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>EDirectoryView</title>
			<short-title>EDirectoryView</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>